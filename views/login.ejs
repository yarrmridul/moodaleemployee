<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | Moodale</title>
  <link rel="icon" href="https://media-del2-2.cdn.whatsapp.net/v/t61.24694-24/421327366_1012227250666599_5875533542942456816_n.jpg?...">
  <link rel="stylesheet" href="/login.css" />
  <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
</head>

<body class="bg-[#0d0d0d] font-[Manrope] text-white">
  <!-- Dotted Grid Background -->
  <div class="bg-dot-grid"></div>
  <!-- Glowing Geometric Shapes -->
  <div class="bg-geometry">
    <div class="geo-shape circle"></div>
    <div class="geo-shape triangle"></div>
    <div class="geo-shape square"></div>
    <div class="geo-shape hexagon"></div>
  </div>

  <main class="flex flex-col items-center justify-center min-h-screen px-4 py-8">
    <div class="text-center mb-6">
      <img src="/images/logo.png" alt="Moodale Logo" class="h-24 mx-auto drop-shadow-xl" />
      <h1 class="text-2xl sm:text-3xl font-bold mt-2">Welcome Back!</h1>
      <p class="text-sm text-gray-300 mt-1">Login to access your Moodale Dashboard</p>
    </div>

    <form action="/adminlogin" method="POST" class="w-full max-w-md bg-[#1a1a1a] p-6 rounded-xl shadow-lg backdrop-blur-md border border-white/10">
      <div class="mb-4">
        <input type="email" name="email" id="email" placeholder="Email ID" autocomplete="email" required class="form-input h-14" />
      </div>

      <div class="mb-4 relative">
        <input type="password" name="password" id="password" placeholder="Password" autocomplete="current-password" required class="form-input h-14 pr-10" />
        <button type="button" onclick="togglePassword()" class="absolute right-3 top-1/2 -translate-y-1/2 text-white text-sm">
          <span id="toggleIcon" class="material-icons-outlined text-xl">visibility</span>
        </button>
      </div>

      <div class="flex justify-end text-sm mb-4">
        <a href="#" class="text-gray-400 hover:text-orange-500">Forgot Password?</a>
      </div>

      <button type="submit" class="btn btn-orange w-full h-12">Log in</button>

      <div class="mt-8 text-center text-sm text-gray-400">Support us on</div>

      <div class="mt-4 grid grid-cols-2 gap-3">
        <a href="https://www.instagram.com/moodale_/" target="_blank" class="btn btn-secondary">Instagram</a>
        <a href="https://www.linkedin.com/company/moodale/" target="_blank" class="btn btn-secondary">LinkedIn</a>
      </div>

      <a href="https://g.page/r/CW3Sc5-WIod_EBE/review" target="_blank" class="mt-3 btn btn-secondary w-full">Google</a>
    </form>
  </main>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById("password");
      const toggleIcon = document.getElementById("toggleIcon");
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        toggleIcon.textContent = "visibility_off";
      } else {
        passwordInput.type = "password";
        toggleIcon.textContent = "visibility";
      }
    }
  </script>

      <!-- WhatsApp Floating Button -->
  <div class="whatsapp-float">
    <a href="https://wa.me/917983738443" target="_blank" title="Chat with us on WhatsApp">
      <img src="https://img.icons8.com/ios-filled/50/ffffff/whatsapp.png" alt="WhatsApp">
    </a>
  </div>
  <% if (typeof error !== 'undefined' && error) { %>
  <div id="error-dialog" class="fixed top-6 right-6 z-50 bg-red-600 text-white px-4 py-3 rounded-lg shadow-lg animate-pulse">
    <%= error %>
  </div>

  <script>
    setTimeout(() => {
      const dialog = document.getElementById('error-dialog');
      if (dialog) dialog.remove();
    }, 3000); // auto-hide after 3 seconds
  </script>
<% } %>

</body>

</html>