<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Task Management</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/task.css">
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>
<body class="h-screen bg-[#fdf3e0] flex font-sans  bg-orange-50">

  <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i data-lucide="users"></i>
                </div>
                <span>Admin Panel</span>
            </div>
            <nav class="menu">
                <a href="/admin" class="menu-item "><i data-lucide="users"></i>Dashboard</a>
                <form action="/admin/employee" method="get">
                    <a href="/admin/employee" class="menu-item"><i data-lucide="users"></i>Employees</a>
                </form>
                <a href="/admin/task" class="menu-item active"><i data-lucide="message-square"></i>Tasks</a>
                <a href="/admin/meeting" class="menu-item"><i data-lucide="calendar"></i>Meetings</a>
                <a href="/admin/leave" class="menu-item"><i data-lucide="calendar"></i>Leave Requests</a>
            </nav>
            <div class="logout">
                <button><i data-lucide="log-out"></i> Logout</button>
            </div>
        </aside>

  <!-- Main -->
  <div class="main-content">
    <div class="header">
      <h1 class="title">Task Management</h1>
      <form action="/admin/task/add" method="get">
      <button class="assign-btn"><i data-lucide="plus"></i>Assign New Task</button>
      </form>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="text-lg font-semibold">Task History</h2>
        <div class="relative w-64">
          <i data-lucide="search" class="absolute left-3 top-2.5 text-gray-400 h-5 w-5"></i>
          <input type="text" class="search-input" placeholder="Search tasks..." />
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="table-auto w-full text-sm">
          <thead>
            <tr class="table-head">
              <th>Task Name</th>
              <th>Client</th>
              <th>Assigned</th>
              <th>Details</th>
              <th>Status</th>
              <th>Deadline</th>
              <th>Upload Docs</th>
              <th>Task Report</th>
              <th>Comments</th>
            </tr>
          </thead>
          <tbody class="bg-white text-gray-700">
            <tr class="hover:bg-gray-50 border-b">
              <td class="px-4 py-3 font-medium">Website Redesign</td>
              <td class="px-4 py-3">Acme Corp</td>
              <td class="px-4 py-3">Ethan Carter<br/><span class="text-xs text-gray-400">(EMP001)</span></td>
              <td class="px-4 py-3">Finalize mockups & gather feedback</td>
              <td class="px-4 py-3">
                <span class="badge-yellow">In Progress</span>
              </td>
              <td class="px-4 py-3">2024-08-15</td>
              <td class="px-4 py-3">
                <button class="upload-btn"><i data-lucide="upload-cloud" class="w-4 h-4"></i> Upload</button>
              </td>
              <td class="px-4 py-3">
                <button class="download-btn"><i data-lucide="download-cloud" class="w-4 h-4"></i> Download</button>
              </td>
              <td class="px-4 py-3">
                <button class="comment-btn"><i data-lucide="plus-circle" class="w-4 h-4"></i> Add</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="pagination">
        <div>Showing <strong>1â€“3</strong> of <strong>100</strong></div>
        <div class="flex gap-2">
          <button class="page-btn">Previous</button>
          <button class="page-btn">1</button>
          <button class="page-btn active">2</button>
          <button class="page-btn">3</button>
          <button class="page-btn">Next</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    lucide.createIcons();
  </script>
</body>
</html>
