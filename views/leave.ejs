<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Leave Requests</title>
  <link href="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://unpkg.com/lucide-static@latest/umd/lucide.min.css" />
  <link rel="stylesheet" href="/leave.css" />
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i data-lucide="users"></i>
                </div>
                <span>Admin Panel</span>
            </div>
            <nav class="menu">
                <a href="/admin" class="menu-item "><i data-lucide="users"></i>Dashboard</a>
                <form action="/admin/employee" method="get">
                    <a href="/admin/employee" class="menu-item"><i data-lucide="users"></i>Employees</a>
                </form>
                <a href="/admin/task" class="menu-item"><i data-lucide="message-square"></i>Tasks</a>
                <a href="/admin/meeting" class="menu-item"><i data-lucide="calendar"></i>Meetings</a>
                <a href="/admin/leave" class="menu-item active"><i data-lucide="calendar"></i>Leave Requests</a>
            </nav>
            <div class="logout">
                <button><i data-lucide="log-out"></i> Logout</button>
            </div>
        </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="header">
        <h1>Leave Requests</h1>
        <p>Manage and respond to employee leave requests.</p>
      </div>

      <div class="pending-box">
        <div>Pending Requests</div>
        <div class="count">3</div>
      </div>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr class="table-head">
              <th>Leave ID</th>
              <th>Employee Name</th>
              <th>Department</th>
              <th>Reason</th>
              <th>From Date</th>
              <th>To Date</th>
              <th>Status</th>
              <th>Comment</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>LV-2024-001</td>
              <td>Owen Turner</td>
              <td>Marketing</td>
              <td>Vacation</td>
              <td>2024-07-15</td>
              <td>2024-07-20</td>
              <td><span class="status pending">Pending</span></td>
            </tr>
            <tr>
              <td>LV-2024-002</td>
              <td>Sophia Clarke</td>
              <td>Sales</td>
              <td>Sick Leave</td>
              <td>2024-07-18</td>
              <td>2024-07-18</td>
              <td><span class="status accepted">Accepted</span></td>
            </tr>
            <tr>
              <td>LV-2024-003</td>
              <td>Lucas Bennett</td>
              <td>Engineering</td>
              <td>Personal Leave</td>
              <td>2024-07-22</td>
              <td>2024-07-23</td>
              <td><span class="status rejected">Rejected</span></td>
            </tr>
            <tr>
              <td>LV-2024-004</td>
              <td>Chloe Hayes</td>
              <td>HR</td>
              <td>Maternity Leave</td>
              <td>2024-08-01</td>
              <td>2024-10-31</td>
              <td><span class="status pending">Pending</span></td>
            </tr>
            <tr>
              <td>LV-2024-005</td>
              <td>Jackson Reed</td>
              <td>Finance</td>
              <td>Vacation</td>
              <td>2024-08-10</td>
              <td>2024-08-15</td>
              <td><span class="status pending">Pending</span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script src="https://unpkg.com/lucide@latest"></script>
  <script>lucide.createIcons();</script>
</body>
</html>
