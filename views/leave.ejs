<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Leave Requests | Moodale Admin</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/leave.css" />
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body>
  <!-- Background -->
  <div class="bg-elements">
    <div class="glow-ring top-left"></div>
    <div class="glow-ring bottom-right"></div>
    <div class="blur-blob center"></div>
    <div class="moodale-watermark">Moodale</div>
  </div>

  <div class="dashboard">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="logo"><i data-lucide="user-cog"></i></div>
        <span>Admin Panel</span>
        <button class="sidebar-close" id="closeSidebar"><i data-lucide="x"></i></button>
      </div>
      <nav class="menu">
        <a href="/admin" class="menu-item "><i data-lucide="users"></i>Dashboard</a>

        <form action="/admin/employee" method="get">
          <a href="/admin/employee" class="menu-item"><i data-lucide="users"></i>Employees</a>
        </form>
        <a href="/admin/task" class="menu-item"><i data-lucide="message-square"></i>Tasks</a>
        <a href="/admin/meeting" class="menu-item"><i data-lucide="calendar"></i>Meetings</a>
        <a href="/admin/leave" class="menu-item active"><i data-lucide="calendar"></i>Leave Requests</a>
      </nav>
      <div class="logout">
        <button><i data-lucide="log-out"></i>Logout</button>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="topbar">
        <button class="sidebar-toggle" id="openSidebar"><i data-lucide="menu"></i></button>
        <h1>Leave Requests</h1>
      </div>

      <p class="subtitle">Manage and respond to employee leave requests.</p>

      <div class="pending-box">
        <div>Pending Requests</div>
        <div class="count">3</div>
      </div>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr class="table-head">
              <th>Leave ID</th>
              <th>Employee Name</th>
              <th>Department</th>
              <th>Reason</th>
              <th>From Date</th>
              <th>To Date</th>
              <th>Status</th>
              <th>Comment</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>LV-2024-001</td>
              <td>Owen Turner</td>
              <td>Marketing</td>
              <td>Vacation</td>
              <td>2024-07-15</td>
              <td>2024-07-20</td>
              <td><span class="status pending">Pending</span></td>
              <td>-</td>
            </tr>
            <tr>
              <td>LV-2024-002</td>
              <td>Sophia Clarke</td>
              <td>Sales</td>
              <td>Sick Leave</td>
              <td>2024-07-18</td>
              <td>2024-07-18</td>
              <td><span class="status accepted">Accepted</span></td>
              <td>-</td>
            </tr>
            <tr>
              <td>LV-2024-003</td>
              <td>Lucas Bennett</td>
              <td>Engineering</td>
              <td>Personal Leave</td>
              <td>2024-07-22</td>
              <td>2024-07-23</td>
              <td><span class="status rejected">Rejected</span></td>
              <td>-</td>
            </tr>
            <tr>
              <td>LV-2024-004</td>
              <td>Chloe Hayes</td>
              <td>HR</td>
              <td>Maternity Leave</td>
              <td>2024-08-01</td>
              <td>2024-10-31</td>
              <td><span class="status pending">Pending</span></td>
              <td>-</td>
            </tr>
            <tr>
              <td>LV-2024-005</td>
              <td>Jackson Reed</td>
              <td>Finance</td>
              <td>Vacation</td>
              <td>2024-08-10</td>
              <td>2024-08-15</td>
              <td><span class="status pending">Pending</span></td>
              <td>-</td>
            </tr>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script>
    lucide.createIcons();
    document.getElementById("openSidebar").addEventListener("click", () => {
      document.getElementById("sidebar").classList.add("active");
    });
    document.getElementById("closeSidebar").addEventListener("click", () => {
      document.getElementById("sidebar").classList.remove("active");
    });
  </script>
</body>

</html>